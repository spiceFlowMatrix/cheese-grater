{
  "name": "portfolio",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/portfolio/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/portfolio",
        "index": "apps/portfolio/src/index.html",
        "browser": "apps/portfolio/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/portfolio/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/portfolio/public"
          }
        ],
        "styles": ["apps/portfolio/src/styles.scss"],
        "scripts": [],
        "server": "apps/portfolio/src/main.server.ts",
        "ssr": {
          "entry": "apps/portfolio/src/server.ts"
        },
        "prerender": true
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "production-no-ssr": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all",
          "ssr": false,
          "prerender": false
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "portfolio:build:production"
        },
        "development": {
          "buildTarget": "portfolio:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "portfolio:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/portfolio/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "configurations": {
        "production": {
          "buildTarget": "portfolio:build",
          "port": 4200,
          "staticFilePath": "dist/apps/portfolio/browser",
          "spa": true
        },
        "production-no-ssr": {
          "buildTarget": "portfolio:build:production-no-ssr",
          "staticFilePath": "dist/apps/portfolio/browser",
          "spa": true
        }
      },
      "defaultConfiguration": "production"
    }
  }
}
